{
    "manifest_version": 3,
    "name": "Extension",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts"   : [
        {
            "js": [
                "src/content.tsx"
            ],
            "matches": [
                "http://localhost:3000/*",
                "https://anycontext.dhr.wtf/*",
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "http://localhost:3000/*",
        "https://anycontext.dhr.wtf/*"
    ],
    "background": {
        "service_worker": "src/background.ts"
      }
}